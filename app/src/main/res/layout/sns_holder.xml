<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginRight="8dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="2dp"
    app:cardMaxElevation="2dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/profile_img"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름"
                android:layout_toRightOf="@+id/profile_img"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="업로드 시간"
                android:layout_toRightOf="@+id/profile_img"
                android:layout_marginTop="38dp"
                android:layout_marginLeft="10dp"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/sns_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SNS 본문"
                android:layout_below="@+id/profile_img"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

            <ViewFlipper
                android:id="@+id/content_img_slide"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@id/sns_content"
                android:layout_marginTop="10dp"
                android:layout_weight="3" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@drawable/gradient"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:drawableLeft="@drawable/icon_like"
                android:paddingLeft="30dp"
                android:text="좋아요"
                android:textSize="12sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:drawableLeft="@drawable/icon_comments"
                android:paddingLeft="30dp"
                android:text="댓글 달기"
                android:textSize="12sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:drawableLeft="@drawable/icon_chattting"
                android:paddingLeft="30dp"
                android:text="보내기"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>