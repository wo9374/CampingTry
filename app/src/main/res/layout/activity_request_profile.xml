<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFDF"
    android:orientation="vertical"
    tools:context=".MyPage.RequestProfile.RequestProfileActivity">

    <TextView
        android:id="@+id/textView39"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="36dp"
        android:text="회원정보 변경"
        android:textColor="#F09661"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView40"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:text="아이디"
            android:textAlignment="center"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="@+id/re_userid" />

        <TextView
            android:id="@+id/re_userid"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="#56DADADA"
            android:gravity="center_vertical"
            android:text="TextView"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView43"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="#56DADADA"
            android:gravity="center"
            android:text="수정불가"
            android:textAlignment="center"
            android:textColor="#99FF0000"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView42"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:text="이메일"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/re_email"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textEmailAddress" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView41"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:text="현재 암호"
            app:layout_constraintBottom_toBottomOf="@+id/check_pass"
            app:layout_constraintEnd_toEndOf="@+id/textView42"
            app:layout_constraintStart_toStartOf="@+id/textView42"
            app:layout_constraintTop_toTopOf="@+id/check_pass" />

        <EditText
            android:id="@+id/check_pass"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="@+id/re_email"
            app:layout_constraintStart_toStartOf="@+id/re_email"
            app:layout_constraintTop_toBottomOf="@+id/re_email" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/RePassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView44"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:text="새 암호"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/re_pass"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/RePassword2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView46"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:text="재확인"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/re_pass2"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView47"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:text="이 름"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/re_username"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="#56DADADA"
            android:gravity="center_vertical"
            android:text="TextView"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView49"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="#56DADADA"
            android:gravity="center_vertical"
            android:text="수정불가"
            android:textAlignment="center"
            android:textColor="#99FF0000"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/re_username"
            app:layout_constraintEnd_toEndOf="@+id/re_pass2"
            app:layout_constraintStart_toEndOf="@+id/re_username"
            app:layout_constraintTop_toTopOf="@+id/re_username" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/NicName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView51"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:text="닉네임"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/re_subname"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/PhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView50"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:text="전화번호"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/re_num"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="phone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/re_fin"
            android:layout_width="155dp"
            android:layout_height="50dp"
            android:background="#F09661"
            android:text="변경하기"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/re_close"
            android:layout_width="155dp"
            android:layout_height="50dp"
            android:layout_marginStart="32dp"
            android:background="#F09661"
            android:text="취소하기"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>